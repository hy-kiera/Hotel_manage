        <Button
            android:id="@+id/followButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="#FF0000"
            android:text="팔로우"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/followButton"
            android:background="#FF0000"
            android:onClick="select_Declare"
            android:text="신고"
            android:textColor="#fff"
            android:textSize="15sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/button_song_like_animation"
            android:layout_width="131dp"
            android:layout_height="179dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="282dp"
            android:layout_marginTop="440dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="30dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="1851-like-02.json"
            app:lottie_loop="false" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"

            android:id="@+id/menu_share"
            app:srcCompat="@drawable/share_icon" />

        <TextView
            android:id="@+id/text_is_song_like_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followButton"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:text=" 0 "
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_below="@+id/followButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/heart2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="234dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="방송 제목"
            android:gravity="center_vertical|left"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_is_song_like_clicked3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/followButton"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text=" 0 "
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_below="@+id/followButton"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/text_is_song_like_clicked"
            app:srcCompat="@drawable/icon" />

