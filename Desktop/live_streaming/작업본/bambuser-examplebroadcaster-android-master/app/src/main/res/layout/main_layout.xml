        <TextView
            android:id="@+id/txt_dummytext3"
            android:layout_width="344dp"
            android:layout_height="25dp"
            android:layout_above="@+id/ChatListView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="#66000000"
            android:textColor="#fff"
            android:text="각종 알림 : 집가고 싶은 사람? "
            android:textSize="15sp"
            android:gravity="center_vertical|left"/>

        <ListView
            android:id="@+id/ChatListView"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_above="@+id/txt_dummytext2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="#66000000"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="0px"
            android:listSelector="@android:color/transparent"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_dummytext2"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_above="@+id/layout_open_chat_chatbox"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="#66000000"
            android:textColor="#fff"
            android:text="공지사항 : 집가고 싶다!!"
            android:textSize="15sp"
            android:gravity="center_vertical|left"/>


        <LinearLayout
            android:id="@+id/layout_open_chat_chatbox"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:minHeight="48dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_open_channel_chat_upload"

                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Upload file" />

            <EditText
                android:id="@+id/edittext_chat_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Enter message"
                android:maxLines="6" />

            <Button
                android:id="@+id/button_open_channel_chat_send"
                android:layout_width="64dp"
                android:layout_height="48dp"

                android:layout_gravity="bottom"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="SEND"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:layout_width="344dp"
            android:layout_height="2dp"
            android:layout_above="@id/layout_open_chat_chatbox"
            android:background="#DfDfDf" />

<!--        <Button-->
